<div class="row">
    <div class="col-xs-4">
        <div class="panel panel-default">
            <div class="panel-heading">Ultimi Artisti</div>
            <div class="panel-body">
                <% artists.forEach( function (row){ %>
                <div class="media">
                    <a class="pull-left" href="/artista/<%= row.slug %>">
                        <% if (row.photo) { %>
                        <img src="/uploads/<%= row.photo.picture %>" class="img-responsive media-object js-rc-64" alt="<%= row.fullname %>"/>
                        <% } else { %>
                        <img src="/images/no-image.png" class="img-responsive media-object js-rc-64" alt="<%= row.fullname %>"/>
                        <% } %>
                    </a>

                    <div class="media-body">
                        <h4 class="media-heading"><%= row.fullname %></h4>
                        <p><%= row.category.fullname %>, <%= row.region.fullname %></p>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
