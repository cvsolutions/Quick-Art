<div class="row">
    <% if(artists.length > 0){ %>
    <% artists.forEach( function (row){ %>
    <div class="col-xs-6">
        <div class="thumbnail">
            <% if (row.photo) { %>
            <img src="/uploads/<%= row.photo.picture %>" class="img-responsive js-rc-350" alt=""/>
            <% } else { %>
            <img src="/images/no-image.png" class="img-responsive js-rc-350" alt=""/>
            <% } %>
            <div class="caption">
                <h3><%= row.fullname %></h3>
                <p><%= row.province.fullname %></p>
                <p><a href="/artista/<%= row.slug %>" class="btn btn-primary btn-sm" role="button"><span class="glyphicon glyphicon-search"></span> dettagli</a></a></p>
            </div>
        </div>
    </div>
    <% }); %>
    <% } else { %>
    <div class="col-xs-12">
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            Spiacente, ma nessun risultato Ã¨ stato trovato!
        </div>
    </div>
    <% } %>
</div>
