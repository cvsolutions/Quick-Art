<%- layout('layout') %>
<%- include header.ejs %>

<div class="panel panel-default">
    <div class="panel-heading">Nuovo Articolo</div>
    <div class="panel-body">
        <div id="result"></div>
        <form id="js-articles-add-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Titolo</label>
                        <input type="text" class="form-control" name="fullname" id="fullname" value="" required="">
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Permalink</label>
                        <input type="text" class="form-control" name="slug" id="slug" value="" required="">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Sotto Titolo</label>
                <input type="text" class="form-control" name="subtitle" id="subtitle" value="" required="">
            </div>
            <div class="form-group">
                <label>Descrizione</label>
                <textarea class="form-control" name="description" id="description" rows="15" required=""></textarea>
            </div>
            <div class="form-group">
                <label>Immagine</label>
                <input type="file" name="picture" id="picture" accept="image/*" required="">
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <label>Categoria</label>
                    <select class="form-control" name="content" id="content" required="">
                        <option value="">-</option>
                        <% contents.forEach( function (row){ %>
                        <option value="<%= row._id %>"><%= row.fullname %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Tags (separare le parole con una virgola e uno spazio)</label>
                        <input type="text" class="form-control" name="tags" id="tags" value="" data-role="tagsinput" required="">
                    </div>
                </div>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="home" id="home" value="1"> Mostra in Homepage</label>
            </div>
            <input type="submit" class="btn btn-primary" value="Salva">
        </form>
    </div>
</div>