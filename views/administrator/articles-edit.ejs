<%- layout('layout') %>
<%- include header.ejs %>

<div class="panel panel-default">
    <div class="panel-heading">Modifica Articolo</div>
    <div class="panel-body">
        <div id="result"></div>
        <form id="js-articles-edit-form" method="post" enctype="application/x-www-form-urlencoded">
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Titolo</label>
                        <input type="text" class="form-control" name="fullname" id="fullname" value="<%= article.fullname %>" required="">
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Slug</label>

                        <div class="input-group">
                            <span class="input-group-addon">../blog/</span>
                            <input type="text" class="form-control" name="slug" id="slug" value="<%= article.slug %>" required="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Descrizione</label>
                <textarea class="form-control" name="description" id="description" rows="15" required=""><%= article.description %></textarea>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <label>Categoria</label>
                    <select class="form-control" name="content" id="content" data-selected="<%= article.content %>" required="">
                        <option value="">-</option>
                        <% contents.forEach( function (row){ %>
                        <option value="<%= row._id %>"><%= row.fullname %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Tags</label>
                        <input type="text" class="form-control" name="tags" id="tags" value="<%= article.tags %>" data-role="tagsinput" required="">
                    </div>
                </div>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="active" id="active" <% if (article.active == 1) { %>checked<% } %> value="1"> Mostra sul sito</label>
            </div>
            <br/>
            <input type="hidden" name="id" id="id" value="<%= article._id %>">
            <input type="submit" class="btn btn-primary" value="Salva">
        </form>
    </div>
</div>