<% title = 'Modifica Profilo' %>
<%- layout('../site/layout') %>

<div class="row">
    <div class="col-xs-8">
        <h1>Modifica Password</h1>
        <p>Modifica la password di questo Account.</p>
        <p>&nbsp;</p>

        <div id="result"></div>
        <form id="js-edit-password-form" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <label><span class="text-danger">*</span> Nuova Password</label>
                <input type="password" class="form-control" name="pwd" id="pwd" value="" required="">
            </div>
            <input type="hidden" name="id" id="id" value="<%= artist._id %>">
            <input type="submit" class="btn btn-default" value="Salva">
        </form>
    </div>
    <div class="col-xs-4">
        <%- include sidebar.ejs %>
    </div>
</div>
