<%- layout('../site/layout') %>

<div class="row">
    <div class="col-xs-8">
        <h1>Modifica Foto</h1>
        <p>Modifica quì le immagini della tua galleria artistica personale.</p>
        <p>&nbsp;</p>

        <div id="result"></div>
        <form id="js-gallery-edit-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Titolo</label>
                        <input type="text" class="form-control" name="fullname" id="fullname" value="<%= photo.fullname %>" required="">
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Dimensione (H×L×P) in centimetri</label>

                        <div class="row">
                            <div class="col-xs-4"><input type="number" class="form-control" name="height" id="height" value="<%= photo.height %>" required=""></div>
                            <div class="col-xs-4"><input type="number" class="form-control" name="width" id="width" value="<%= photo.width %>" required=""></div>
                            <div class="col-xs-4"><input type="number" class="form-control" name="depth" id="depth" value="<%= photo.depth %>" required=""></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Tecnica</label>
                        <select class="form-control" name="technique" id="technique" data-selected="<%= photo.technique %>" required="">
                            <option value="">-</option>
                            <% techniques.forEach( function (row){ %>
                            <option value="<%= row._id %>"><%= row.fullname %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Categoria Tematica</label>
                        <select class="form-control" name="theme" id="theme" data-selected="<%= photo.theme %>" required="">
                            <option value="">-</option>
                            <% themes.forEach( function (row){ %>
                            <option value="<%= row._id %>"><%= row.fullname %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Breve Descrizione</label>
                <textarea class="form-control" name="description" id="description" rows="10"><%= photo.description %></textarea>
            </div>
            <div class="form-group">
                <label>Immagine</label>
                <input type="file" name="picture" id="picture" accept="image/*">
                <p class="help-block"><a href="/uploads/<%= photo.picture %>" class="js-fancybox" rel="picture"><%= photo.picture %></a></p>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label>Codice</label>
                        <input type="text" class="form-control" name="code" id="code" value="<%= photo.code %>">
                    </div>
                </div>
                <div class="col-xs-4">
                    <label>Prezzo Netto</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="price" id="price" value="<%= photo.price %>" required="">
                        <span class="input-group-addon">€</span>
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <div class="form-group">
                            <label>Anno</label>
                            <input type="text" class="form-control" name="year" id="year" value="<%= photo.year %>" required="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Tags</label>
                <input type="text" class="form-control" name="tags" id="tags" value="<%= photo.tags %>" data-role="tagsinput" required="">
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="cover" id="cover" <% if (photo.cover == 1) { %>checked<% } %> value="1"> Usa come immagine principale</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="available" id="available" <% if (photo.available == 1) { %>checked<% } %> value="1"> Disponibile</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="frame" id="frame" <% if (photo.frame == 1) { %>checked<% } %> value="1"> Quadro comprensivo di cornice</label>
            </div>
            <input type="hidden" name="slug" id="slug" value="<%= photo.slug %>">
            <input type="hidden" name="id" id="id" value="<%= photo._id %>">
            <input type="submit" class="btn btn-default" value="Salva">
        </form>
    </div>
    <div class="col-xs-4">
        <%- include sidebar.ejs %>
    </div>
</div>
