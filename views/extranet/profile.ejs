<%- layout('../site/layout') %>

<div class="row">
    <div class="col-xs-8">
        <h1>Modifica Profilo</h1>
        <p>Modifica le tue informazioni personali di questo Account.</p>
        <p>&nbsp;</p>

        <div class="response"></div>
        <form id="" method="" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Nome & Cognome</label>
                        <input type="text" class="form-control" name="" id="" value="" required="">
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="" id="" value="" required="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Indirizzo E-mail</label>
                        <input type="email" class="form-control" name="" id="" value="" required="">
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Sito Internet</label>
                        <input type="text" class="form-control" name="" id="" value="" required="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Regione</label>
                        <select class="form-control" name="" id="" required="">
                            <option value="">-</option>
                        </select>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Categoria</label>
                        <select class="form-control" name="" id="" required="">
                            <option value="">-</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Breve Descrizione</label>
                <textarea class="form-control" name="" id="" rows="15" required=""></textarea>
            </div>
            <input type="submit" class="btn btn-default" value="Salva">
        </form>
    </div>
    <div class="col-xs-4">
        <%- include sidebar.ejs %>
    </div>
</div>
