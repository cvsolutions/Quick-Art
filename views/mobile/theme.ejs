<%- layout('layout') %>

<header class="bar bar-nav">
    <a href="/mobile/themes" data-transition="slide-in" class="icon icon-left-nav pull-left"></a>
    <a href="#menu" class="icon icon-info pull-right"></a>
    <h1 class="title"><%= helper.e(theme.fullname) %></h1>
</header>

<%- include form-search.ejs %>
<%- include nav.ejs %>

<div class="content">
    <% if(photos.length > 0){ %>
    <ul class="table-view">
        <% photos.forEach( function (row){ %>
        <li class="table-view-cell media">
            <a href="/mobile/photo/<%= row.rid %>" class="navigate-right" data-transition="slide-in">
                <img src="/uploads/<%= row.picture %>" class="media-object pull-left js-rc-64" width="64" height="64" alt=""/>
                <div class="media-body">
                    <p><%= helper.e(row.fullname) %></p>
                    <p><%= helper.e(row.technique.fullname) %></p>
                </div>
            </a>
        </li>
        <% }); %>
    </ul>
    <% } else { %>
    <div class="content-padded">
        <p>Spiacente, ma nessun risultato Ã¨ stato trovato!</p>
    </div>
    <% } %>
</div>

<%- include modal.ejs %>
