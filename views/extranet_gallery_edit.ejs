<%- layout('site_layout') %>

<div class="row">
    <div class="col-xs-8">
        <h1>Modifica Foto</h1>
        <p>Modifica quì le immagini della tua galleria artistica personale.</p>
        <p>&nbsp;</p>

        <div class="response"></div>
        <form id="" method="" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Titolo</label>
                        <input type="text" class="form-control" name="" id="" value="" required="">
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Tecnica</label>
                        <select class="form-control" name="" id="" required="">
                            <option value="">-</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Categoria Tematica</label>
                        <select class="form-control" name="" id="" required="">
                            <option value="">-</option>
                        </select>
                    </div>
                </div>
                <div class="col-xs-6">
                    <p>&nbsp;</p>
                </div>
            </div>
            <div class="form-group">
                <label>Breve Descrizione</label>
                <textarea class="form-control" name="" id="" rows="10" required=""></textarea>
            </div>
            <div class="form-group">
                <label>Immagine</label>
                <input type="file" name="" id="" required="">
                <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Dimensione (H×L×P) in centimetri</label>

                        <div class="row">
                            <div class="col-xs-4"><input type="text" class="form-control" name="" id="" value="" required=""></div>
                            <div class="col-xs-4"><input type="text" class="form-control" name="" id="" value="" required=""></div>
                            <div class="col-xs-4"><input type="text" class="form-control" name="" id="" value="" required=""></div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label>Prezzo Netto €</label>
                        <input type="text" class="form-control" name="" id="" value="" required="">
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-default" value="Salva">
        </form>
    </div>
    <div class="col-xs-4">
        <%- include extranet_sidebar.ejs %>
    </div>
</div>
